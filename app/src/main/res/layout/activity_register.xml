<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unilocal.activities.RegisterActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/main_title"
        android:text="@string/register_user_title_register"
        android:paddingLeft="50dp"
        style="@style/titles"
        tools:ignore="MissingConstraints" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/form_pager"
        android:layout_width="320dp"
        android:layout_height="507dp"
        android:layout_gravity="center"
        android:background="@drawable/form_register_style"
        android:elevation="30dp">


    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/position_layout"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:backgroundTint="@color/black"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">
        <Button
            android:id="@+id/take_photo"
            android:text="@string/register_place_take_photo"
            android:layout_below="@+id/form_pager"
            android:layout_alignParentRight="true"
            style="@style/button_next"
            />
    <Button
        android:id="@+id/Next"
        android:text="@string/register_user_next"
        style="@style/button_next"
        />


    </LinearLayout>

</LinearLayout>